{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AthenaQueryPermissions",
        "Effect": "Allow",
        "Action": [
          "athena:StartQueryExecution",
          "athena:StopQueryExecution",
          "athena:GetQueryExecution",
          "athena:GetQueryResults"
        ],
        "Resource": [
          "arn:aws:athena:region:account-id:workgroup/primary"
        ]
      },
      {
        "Sid": "GlueDatabasePermissions",
        "Effect": "Allow",
        "Action": [
          "glue:GetDatabase",
          "glue:GetTable",
          "glue:GetPartitions"
        ],
        "Resource": [
          "arn:aws:glue:region:account-id:database/specific-database-name",
          "arn:aws:glue:region:account-id:table/specific-database-name/*"
        ]
      },
      {
        "Sid": "S3AccessPermissions",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:PutObject",
          "s3:ListBucket"
        ],
        "Resource": [
          "arn:aws:s3:::your-query-results-bucket",
          "arn:aws:s3:::your-query-results-bucket/*"
        ]
      }
    ]
  }
  